<Page x:Class="PacientApp1.MainUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PacientApp1"
      mc:Ignorable="d" 
      Title="MainUserPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource BaseBorderStyle}">
            <StackPanel>
                <Label Content="Информация о враче" Style="{StaticResource SectionLabelStyle}"/>
                <StackPanel Style="{StaticResource FormStackPanelStyle}">
                    <TextBlock Text="ID: " FontWeight="Bold"/>
                    <TextBlock Text="{Binding CurrentDoctor.Id}"/>
                </StackPanel>
                <StackPanel Style="{StaticResource FormStackPanelStyle}">
                    <TextBlock Text="ФИО: " FontWeight="Bold"/>
                    <TextBlock Text="{Binding CurrentDoctor.LastName}"/>
                    <TextBlock Text=" "/>
                    <TextBlock Text="{Binding CurrentDoctor.Name}"/>
                    <TextBlock Text=" "/>
                    <TextBlock Text="{Binding CurrentDoctor.MiddleName}"/>
                </StackPanel>
                <StackPanel Style="{StaticResource FormStackPanelStyle}">
                    <TextBlock Text="Специализация: " FontWeight="Bold"/>
                    <TextBlock Text="{Binding CurrentDoctor.Specialisation}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="1" Style="{StaticResource BaseStackPanelStyle}">
            <Button Content="Создать пациента" Style="{StaticResource AddButtonStyle}" Click="CreatePatient_Click"/>
            <Button Content="Начать прием" Style="{StaticResource StandardButtonStyle}" Click="Appointment_Click"/>
            <Button Content="Изменить информацию" Style="{StaticResource StandardButtonStyle}" Click="EditInfo_Click"/>
            <Button Content="Назад" Style="{StaticResource StandardButtonStyle}" Click="BackBtn_Click"/>
            <Button Content="Удалить пациента" Style="{DynamicResource DeleteButtonStyle}" Click="DeletePatientBtn_Click"/>
        </StackPanel>

        <Border Grid.Row="2" Style="{StaticResource BaseBorderStyle}">
            <StackPanel>
                <Label Content="Список пациентов" Style="{StaticResource SectionLabelStyle}"/>
                <ListView x:Name="PatientsListView" 
                          ItemsSource="{Binding Patients}" 
                          SelectedItem="{Binding SelectedPatient, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          MouseDoubleClick="PatientsListView_MouseDoubleClick"
                          Style="{StaticResource BaseListViewStyle}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="8,5">
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{Binding Id}" FontWeight="SemiBold" TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding LastName, StringFormat='Фамилия: {0}'}" TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding Name, StringFormat='Имя: {0}'}" TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding MiddleName, StringFormat='Отчество: {0}'}" TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding PhoneNumber, StringFormat='Номер телефона: {0}'}" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </Border>
    </Grid>
</Page>