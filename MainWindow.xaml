<Window x:Class="PacientApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Окно приема пациента" Height="700" Width="1000"
        Background="{DynamicResource WindowBackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Background="{DynamicResource PrimaryBrush}">
            <MenuItem Header="Файл">
                <MenuItem Header="Выход" Click="ExitMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="Настройки">
                <MenuItem Header="Сменить тему" Click="ChangeThemeMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="Помощь">
                <MenuItem Header="О программе" Click="AboutMenuItem_Click"/>
            </MenuItem>
        </Menu>

        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Row="1"/>

        <StatusBar Grid.Row="2" Background="{DynamicResource PrimaryBrush}">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Готов к работе" Foreground="White"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock x:Name="SystemInfoText" Text="Пользователи: 0 | Пациенты: 0" Foreground="White"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>