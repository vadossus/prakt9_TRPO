<Page x:Class="PacientApp1.EditPatientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PacientApp1"
      mc:Ignorable="d" 
      Title="EditPatientPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Изменение информации о пациенте" Style="{StaticResource HeaderLabelStyle}"/>

        <Border Grid.Row="1" Style="{StaticResource BaseBorderStyle}">
            <StackPanel>
                <StackPanel Style="{StaticResource FormStackPanelStyle}">
                    <Label Content="ID пациента" Style="{StaticResource CreatePatientLabel}"/>
                    <TextBlock Text="{Binding CurrentPatient.Id}"/>
                </StackPanel>

                <StackPanel Style="{StaticResource FormStackPanelStyle}">
                    <Label Content="Имя" Style="{StaticResource CreatePatientLabel}"/>
                    <TextBox x:Name="NameTextBox" Text="{Binding CurrentPatient.Name, Mode=TwoWay}" Style="{StaticResource RegisterTextBoxStyle}"/>
                </StackPanel>

                <StackPanel Style="{StaticResource FormStackPanelStyle}">
                    <Label Content="Фамилия" Style="{StaticResource CreatePatientLabel}"/>
                    <TextBox x:Name="LastNameTextBox" Text="{Binding CurrentPatient.LastName, Mode=TwoWay}" Style="{StaticResource RegisterTextBoxStyle}"/>
                </StackPanel>

                <StackPanel Style="{StaticResource FormStackPanelStyle}">
                    <Label Content="Отчество" Style="{StaticResource CreatePatientLabel}"/>
                    <TextBox x:Name="MiddleNameTextBox" Text="{Binding CurrentPatient.MiddleName, Mode=TwoWay}" Style="{StaticResource RegisterTextBoxStyle}"/>
                </StackPanel>

                <StackPanel Style="{StaticResource FormStackPanelStyle}">
                    <Label Content="Дата рождения" Style="{StaticResource CreatePatientLabel}"/>
                    <DatePicker x:Name="BirthdayDatePicker" SelectedDateChanged="BirthdayDatePicker_SelectedDateChanged" Style="{StaticResource EditPatientDatePicker}"/>
                </StackPanel>

                <StackPanel Style="{StaticResource FormStackPanelStyle}">
                    <Label Content="Контактный телефон" Style="{StaticResource CreatePatientLabel}"/>
                    <TextBox x:Name="PhoneTextBox" Text="{Binding CurrentPatient.PhoneNumber, Mode=TwoWay}" Style="{StaticResource RegisterTextBoxStyle}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2" Style="{StaticResource ButtonPanelStyle}">
            <Button Content="Сохранить" Style="{StaticResource AddButtonStyle}" Click="SaveBtn_Click"/>
            <Button Content="Отмена" Style="{StaticResource StandardButtonStyle}" Click="CancelBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>