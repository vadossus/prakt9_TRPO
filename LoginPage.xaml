<Page x:Class="PacientApp1.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PacientApp1"
      mc:Ignorable="d" 
      Title="LoginPage">

    <Grid Background="{DynamicResource WindowBackgroundBrush}">
        <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" 
                Padding="30" Background="{DynamicResource WindowBackgroundBrush}"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Width="400">

            <StackPanel HorizontalAlignment="Center" Width="350">
                <Label Content="Вход в систему" Style="{StaticResource HeaderLabelStyle}" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <StackPanel Orientation="Horizontal" Margin="0,10" HorizontalAlignment="Center">
                    <Label Content="Идентификатор" Width="120" Style="{StaticResource BaseLabelStyle}" VerticalAlignment="Center"/>
                    <TextBox x:Name="IDTextBox" Width="150" Style="{StaticResource BaseTextBoxStyle}" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10" HorizontalAlignment="Center">
                    <Label Content="Пароль" Width="120" Style="{StaticResource BaseLabelStyle}" VerticalAlignment="Center"/>
                    <PasswordBox x:Name="PassBox" Width="150" Style="{StaticResource BasePasswordBoxStyle}" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Vertical" Margin="0,20,0,0" HorizontalAlignment="Center">
                    <Button x:Name="LoginBtn" Content="Войти" Width="120" 
                            Style="{StaticResource StandardButtonStyle}" Click="LoginBtn_Click"/>
                    <Button x:Name="RegisterBtn" Content="Регистрация" Width="120" 
                            Style="{StaticResource StandardButtonStyle}" Click="RegisterBtn_Click" 
                            Margin="0,5,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>